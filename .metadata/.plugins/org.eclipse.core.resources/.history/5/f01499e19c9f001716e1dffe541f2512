package ca.mcgill.ecse211.odometerlab;

import lejos.hardware.ev3.LocalEV3;
import lejos.hardware.sensor.NXTLightSensor;
import lejos.robotics.Color;

public class OdometryCorrection extends Thread {
  private static final long CORRECTION_PERIOD = 10;
  private Odometer odometer;
  //private NXTLightSensor lightSensor = new NXTLightSensor(LocalEV3.get().getPort("S1"));
  private float[] lsData;
  
  // constructor
  public OdometryCorrection(Odometer odometer, float[] lsData) {
    this.odometer = odometer;
    this.lsData = lsData;

    /* test
    lightSensor.setFloodlight(Color.GREEN);
    lightSensor.setFloodlight(true); */
  }

  // run method (required for Thread)
  public void run() {
    long correctionStart, correctionEnd;
    while (true) {
      correctionStart = System.currentTimeMillis();

      /*TODO Place correction implementation here
      lightSensor.setFloodlight(Color.GREEN);
      lightSensor.setFloodlight(true);*/
      
      // this ensure the odometry correction occurs only once every period
      correctionEnd = System.currentTimeMillis();
      if (correctionEnd - correctionStart < CORRECTION_PERIOD) {
        try {
          Thread.sleep(CORRECTION_PERIOD - (correctionEnd - correctionStart));
        } catch (InterruptedException e) {
          // there is nothing to be done here because it is not
          // expected that the odometry correction will be
          // interrupted by another thread
        }
      }
    }
  }
}
